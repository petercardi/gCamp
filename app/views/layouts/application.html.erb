<!DOCTYPE html>
<html>

  <head>
    <title>gCamp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <a class="navbar-brand" href="/">gCamp</a>
      </div>
    </nav>

    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= notice %></div>
      <% elsif flash[:error] %>
        <div class="alert alert-error"><%= flash[:error] %></div>
      <% end %>
    </div>

    <%= yield %>

    <div class="container">
      <footer>
        <hr>
        <%= link_to 'About', about_path %>
        |
        <%= link_to 'Terms', terms_path %>
        |
        <%= link_to 'FAQ', faq_path %>
        |
        <%= link_to 'Tasks', tasks_path %>
        |
        <%= link_to 'Users', users_path %>
        |
        <%= link_to 'Projects', projects_path %>

        <%= link_to image_tag("galvanize.png", class: "img-responsive social_media pull-right"), "https://students.gschool.it/cohorts/8/students/289" %>
        <%= link_to image_tag("twitter.png", class: "img-responsive social_media pull-right"), "https://twitter.com" %>
        <%= link_to image_tag("github.png", class: "img-responsive social_media pull-right"), "https://github.com/petercardi" %>
        <%= link_to image_tag("linkedin.jpg", class: "img-responsive social_media pull-right"), "https://linkedin.com" %>
      </footer>
    </div>

  </body>
</html>
