<div class="container">

  <h1>Edit user profile</h1>

  <% if notice %>
    <%= notice %>
  <% end %>

  <%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.submit %>
  <% end %>

</div>
