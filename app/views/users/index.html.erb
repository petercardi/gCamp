<div class="container">

  <h1>Users</h1>
  <hr>

  <% if notice %>
    <%= notice %>
  <% end %>

  <% @users.each do |user| %>
    <p> <b>Name: </b> <%= user.first_name + ' ' + user.last_name %>
    <b>Email: </b> <%= user.email %>
    Joined at: <%= user.created_at %>
    Edited profile at: <%= user.updated_at %>
    <%= link_to "Show", user_path(user[:id]) %>
    <%= link_to "Edit", edit_user_path(user[:id]) %>
    <%= link_to "Destroy!", user_path(user[:id]), method: :delete, data: {confirm: "Are you suuure?"} %> </p>
    <hr>
  <% end %>

  <p> <%= link_to "Add User", new_user_path %> </p>

</div>
