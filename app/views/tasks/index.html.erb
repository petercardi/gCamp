<div class="container">

  <p id="notice"><%= notice %></p>
  <div class="page-header">
    <div class="pull-right">
      <%= link_to "New Task", new_task_path, class: "btn btn-info" %>
    </div>
    <h1>Tasks</h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to "#{task.description}", task_path(task) %></td>
          <td>
            <div class="pull-right">
              <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
              <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
