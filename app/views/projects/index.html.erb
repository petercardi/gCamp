<div class="container">

  <div class="page-header">
    <div class="pull-right">
      <%= link_to "New Project", new_project_path, class: 'btn btn-info' %>
    </div>
    <h1>Projects</h1>
  </div>

  <table class="table">

    <thead>
      <tr>
        <th>Project</th>
        <th></th>
      </tr>
    </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td>
          <div class="pull-right">
            <%= link_to "Edit", edit_project_path(project), class: "btn btn-info" %>
            <%= link_to "Destroy", project_path(project), method: :delete, data: {confirm: "Are you suuuure?"}, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>

  </table>

</div>
